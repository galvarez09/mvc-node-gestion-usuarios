<%- include('../layouts/main', { title: title }) %>

<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
        <!-- Header de la p√°gina -->
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-xl font-semibold text-gray-900">Detalles del Usuario</h2>
                    <p class="text-sm text-gray-600 mt-1">Informaci√≥n completa del usuario</p>
                </div>
                <div class="flex space-x-3">
                    <a href="/users/<%= user._id %>/edit" class="btn-primary">
                        <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Editar
                    </a>
                    <a href="/users" class="btn-secondary">
                        <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Volver
                    </a>
                </div>
            </div>
        </div>

        <!-- Informaci√≥n del usuario -->
        <div class="p-6">
            <!-- Informaci√≥n principal -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Avatar y informaci√≥n b√°sica -->
                <div class="lg:col-span-1">
                    <div class="text-center">
                        <div class="mx-auto h-32 w-32 rounded-full bg-primary-100 flex items-center justify-center mb-4">
                            <span class="text-primary-600 font-bold text-4xl">
                                <%= user.name.charAt(0).toUpperCase() %>
                            </span>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= user.name %></h3>
                        <p class="text-gray-600 mb-4"><%= user.email %></p>
                        
                        <!-- Badges de estado -->
                        <div class="flex justify-center space-x-2 mb-4">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= user.role === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                                <%= user.role === 'admin' ? 'üëë Administrador' : 'üë§ Usuario' %>
                            </span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= user.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                <%= user.isActive ? '‚úÖ Activo' : '‚ùå Inactivo' %>
                            </span>
                        </div>

                        <!-- Acciones r√°pidas -->
                        <div class="space-y-2">
                            <button 
                                onclick="confirmToggleStatus('<%= user._id %>', '<%= user.name %>', <%= user.isActive %>)"
                                class="w-full <%= user.isActive ? 'btn-danger' : 'btn-success' %>"
                            >
                                <% if (user.isActive) { %>
                                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
                                    </svg>
                                    Desactivar Usuario
                                <% } else { %>
                                    <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Activar Usuario
                                <% } %>
                            </button>
                            
                            <button 
                                onclick="confirmDelete('<%= user._id %>', '<%= user.name %>')"
                                class="w-full btn-danger"
                            >
                                <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Eliminar Usuario
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Informaci√≥n detallada -->
                <div class="lg:col-span-2">
                    <div class="space-y-6">
                        <!-- Informaci√≥n personal -->
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h4 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Informaci√≥n Personal
                            </h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <span class="text-sm font-medium text-gray-500">Nombre Completo:</span>
                                    <p class="text-gray-900"><%= user.name %></p>
                                </div>
                                <div>
                                    <span class="text-sm font-medium text-gray-500">Correo Electr√≥nico:</span>
                                    <p class="text-gray-900"><%= user.email %></p>
                                </div>
                                <div>
                                    <span class="text-sm font-medium text-gray-500">Rol del Usuario:</span>
                                    <p class="text-gray-900">
                                        <span class="<%= user.role === 'admin' ? 'text-purple-600' : 'text-blue-600' %> font-medium">
                                            <%= user.role === 'admin' ? 'üëë Administrador' : 'üë§ Usuario' %>
                                        </span>
                                    </p>
                                </div>
                                <div>
                                    <span class="text-sm font-medium text-gray-500">Estado:</span>
                                    <p class="text-gray-900">
                                        <span class="<%= user.isActive ? 'text-green-600' : 'text-red-600' %> font-medium">
                                            <%= user.isActive ? '‚úÖ Activo' : '‚ùå Inactivo' %>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Informaci√≥n del sistema -->
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h4 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                Informaci√≥n del Sistema
                            </h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <span class="text-sm font-medium text-gray-500">ID del Usuario:</span>
                                    <p class="text-gray-900 font-mono text-sm"><%= user._id %></p>
                                </div>
                                <div>
                                    <span class="text-sm font-medium text-gray-500">Fecha de Creaci√≥n:</span>
                                    <p class="text-gray-900">
                                        <%= new Date(user.createdAt).toLocaleDateString('es-ES', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </p>
                                </div>
                                <div>
                                    <span class="text-sm font-medium text-gray-500">√öltima Actualizaci√≥n:</span>
                                    <p class="text-gray-900">
                                        <%= new Date(user.updatedAt).toLocaleDateString('es-ES', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </p>
                                </div>
                                <div>
                                    <span class="text-sm font-medium text-gray-500">Tiempo en el Sistema:</span>
                                    <p class="text-gray-900">
                                        <% 
                                            const now = new Date();
                                            const created = new Date(user.createdAt);
                                            const diffTime = Math.abs(now.getTime() - created.getTime());
                                            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                        %>
                                        <%= diffDays %> d√≠a<%= diffDays !== 1 ? 's' : '' %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Estad√≠sticas -->
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <h4 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
                                <svg class="w-5 h-5 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                                Estad√≠sticas
                            </h4>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-primary-600">
                                        <%= user.role === 'admin' ? 'üëë' : 'üë§' %>
                                    </div>
                                    <div class="text-sm text-gray-500">Tipo de Usuario</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-2xl font-bold <%= user.isActive ? 'text-green-600' : 'text-red-600' %>">
                                        <%= user.isActive ? '‚úÖ' : '‚ùå' %>
                                    </div>
                                    <div class="text-sm text-gray-500">Estado</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-blue-600">
                                        <%= Math.ceil((new Date().getTime() - new Date(user.createdAt).getTime()) / (1000 * 60 * 60 * 24)) %>
                                    </div>
                                    <div class="text-sm text-gray-500">D√≠as Activo</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
