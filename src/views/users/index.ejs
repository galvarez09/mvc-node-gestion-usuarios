<%- include('../layouts/main', { title: title }) %>

<div class="bg-white shadow rounded-lg">
    <!-- Header de la p√°gina -->
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
            <div>
                <h2 class="text-xl font-semibold text-gray-900">Lista de Usuarios</h2>
                <p class="text-sm text-gray-600 mt-1">
                    Total: <%= total %> usuarios | P√°gina <%= currentPage %> de <%= totalPages %>
                </p>
            </div>
            <a href="/users/create" class="btn-primary">
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Crear Usuario
            </a>
        </div>
    </div>

    <!-- Barra de b√∫squeda -->
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <form method="GET" action="/users" class="flex gap-4">
            <div class="flex-1">
                <input 
                    type="text" 
                    name="search" 
                    value="<%= search %>"
                    placeholder="Buscar por nombre o email..." 
                    class="form-input"
                >
            </div>
            <div class="flex gap-2">
                <select name="limit" class="form-input w-24">
                    <option value="10" <%= limit == 10 ? 'selected' : '' %>>10</option>
                    <option value="25" <%= limit == 25 ? 'selected' : '' %>>25</option>
                    <option value="50" <%= limit == 50 ? 'selected' : '' %>>50</option>
                </select>
                <button type="submit" class="btn-primary">
                    <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Buscar
                </button>
                <% if (search) { %>
                    <a href="/users" class="btn-secondary">
                        Limpiar
                    </a>
                <% } %>
            </div>
        </form>
    </div>

    <!-- Tabla de usuarios -->
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Usuario
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Email
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Rol
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Estado
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Fecha Creaci√≥n
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (users.length === 0) { %>
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                            </svg>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">No hay usuarios</h3>
                            <p class="mt-1 text-sm text-gray-500">
                                <% if (search) { %>
                                    No se encontraron usuarios que coincidan con tu b√∫squeda.
                                <% } else { %>
                                    Comienza creando tu primer usuario.
                                <% } %>
                            </p>
                            <div class="mt-6">
                                <a href="/users/create" class="btn-primary">
                                    <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                    </svg>
                                    Crear Usuario
                                </a>
                            </div>
                        </td>
                    </tr>
                <% } else { %>
                    <% users.forEach(user => { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                            <span class="text-primary-600 font-medium text-sm">
                                                <%= user.name.charAt(0).toUpperCase() %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            <%= user.name %>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900"><%= user.email %></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= user.role === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                                    <%= user.role === 'admin' ? 'üëë Admin' : 'üë§ Usuario' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= user.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= user.isActive ? '‚úÖ Activo' : '‚ùå Inactivo' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= new Date(user.createdAt).toLocaleDateString('es-ES', { 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex space-x-2">
                                    <a href="/users/<%= user._id %>" class="text-primary-600 hover:text-primary-900" title="Ver detalles">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </a>
                                    <a href="/users/<%= user._id %>/edit" class="text-indigo-600 hover:text-indigo-900" title="Editar">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    <button 
                                        onclick="confirmToggleStatus('<%= user._id %>', '<%= user.name %>', <%= user.isActive %>)"
                                        class="<%= user.isActive ? 'text-yellow-600 hover:text-yellow-900' : 'text-green-600 hover:text-green-900' %>"
                                        title="<%= user.isActive ? 'Desactivar' : 'Activar' %>"
                                    >
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <% if (user.isActive) { %>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
                                            <% } else { %>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            <% } %>
                                        </svg>
                                    </button>
                                    <button 
                                        onclick="confirmDelete('<%= user._id %>', '<%= user.name %>')"
                                        class="text-red-600 hover:text-red-900"
                                        title="Eliminar"
                                    >
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Paginaci√≥n -->
    <% if (totalPages > 1) { %>
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Mostrando <%= ((currentPage - 1) * limit) + 1 %> a <%= Math.min(currentPage * limit, total) %> de <%= total %> resultados
                </div>
                <div class="flex space-x-2">
                    <% if (currentPage > 1) { %>
                        <a href="/users?page=<%= currentPage - 1 %>&limit=<%= limit %><%= search ? '&search=' + search : '' %>" class="btn-secondary">
                            Anterior
                        </a>
                    <% } %>
                    
                    <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                        <a href="/users?page=<%= i %>&limit=<%= limit %><%= search ? '&search=' + search : '' %>" 
                           class="px-3 py-2 text-sm font-medium rounded-md <%= i === currentPage ? 'bg-primary-600 text-white' : 'text-gray-500 hover:text-gray-700' %>">
                            <%= i %>
                        </a>
                    <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/users?page=<%= currentPage + 1 %>&limit=<%= limit %><%= search ? '&search=' + search : '' %>" class="btn-secondary">
                            Siguiente
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>
</div>
