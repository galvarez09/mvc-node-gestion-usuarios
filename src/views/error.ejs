<%- include('layouts/main', { title: title }) %>

<div class="max-w-2xl mx-auto">
    <div class="bg-white shadow rounded-lg text-center py-12">
        <!-- Icono de error -->
        <div class="mx-auto h-24 w-24 text-red-100 mb-6">
            <svg class="h-24 w-24 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
        </div>

        <!-- Mensaje de error -->
        <h1 class="text-3xl font-bold text-gray-900 mb-4">
            <%= message %>
        </h1>
        
        <p class="text-lg text-gray-600 mb-8">
            Ha ocurrido un error inesperado. Por favor, intenta nuevamente o contacta al administrador del sistema.
        </p>

        <!-- Botones de acción -->
        <div class="flex justify-center space-x-4">
            <a href="/users" class="btn-primary">
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Ir al Inicio
            </a>
            
            <button onclick="history.back()" class="btn-secondary">
                <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver Atrás
            </button>
        </div>

        <!-- Detalles del error (solo en desarrollo) -->
        <% if (error && error.stack) { %>
            <div class="mt-8 p-4 bg-gray-100 rounded-lg text-left">
                <h3 class="text-sm font-medium text-gray-900 mb-2">Detalles del Error:</h3>
                <pre class="text-xs text-gray-600 overflow-x-auto"><%= error.stack %></pre>
            </div>
        <% } %>
    </div>
</div>
